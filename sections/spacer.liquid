<div class="spacer-custom" style="height:{{section.settings.space}}px">
  {% style %}
    @media screen and (max-width: 750px) {
  	  .spacer-custom {
  		width:100%;
        height: 40px !important;
      }
    }
  {% endstyle %}
</div>
{% schema %}
  {
    "name": "Spacer",
    "settings": [
		{
          "type": "range",
          "id": "space",
          "min": 10,
          "max": 200,
          "step": 2,
          "unit": "px",
          "label": "Spacer",
          "default": 100
        }
    ],
     "presets": [
       {
        "name": "Spacer"
       }
  	]
  }
{% endschema %}
